/* pages/cart/index.wxss */
@import "../template/index.wxss";

.cart-content {
  background-color: #f1f1f1;
}

.select-all {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  padding: 0 14.5px;
  box-sizing: border-box;
  font-size: 30rpx;
  border-bottom: 1px solid #e6e5e5;
}

.check-all {
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
  padding-left: 75rpx;
}

.checkall-box {
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -30rpx;
  width: 60rpx;
  height: 60rpx;
}

.check-icon {
  width: 75%;
  height: 75%;
}

/* 选项组 */

.select-group {
  background-color: #fff;
}

.check-item {
  width: calc(100% - 190rpx);
  line-height: 190rpx;
  position: relative;
  padding: 20rpx 14.5px 20rpx calc(75rpx + 14.5px);
  box-sizing: border-box;
  z-index: 5;
  background: rgb(255, 255, 255);
  border-bottom: 1rpx solid #f1f1f1;
}

.check-content {
  display: flex;
  height: 150rpx;
  justify-content: space-between;
}

.img-box {
  min-width: 100rpx;
  height: 150rpx;
}

.img-box image {
  width: 100%;
  height: 100%;
}

.check-box {
  position: absolute;
  left: 14.5px;
  top: 18rpx;
  width: 60rpx;
  height: 60rpx;
}

.text-box {
  flex: 2;
  font-size: 30rpx;
  padding-left: 20rpx;
  width: 360rpx;
  height: 150rpx;
}

.text-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  color: rgb(51, 51, 51);
  margin-bottom: 15rpx;
}

.text-price {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  color: rgb(255, 162, 0);
  font-size: 36rpx;
  margin-bottom: 15rpx;
}

.text-type {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: rgb(175, 175, 175)
}

.buy-count {
  position: absolute;
  right: 14.5px;
  bottom: 13rpx;
  font-size: 30rpx;
  color: #b0b0b0;
}

.foot-box {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  box-sizing: border-box;
  z-index: 6;
  background-color: white;
}

.foot-item {
  height: 70rpx;
  line-height: 70rpx;
  width: 182rpx;
  text-align: center;
  border-radius: 45rpx;
  color: #fff;
  font-size: 28rpx;
  margin: 0 40rpx;
}

.total {
  font-size: 34rpx;
  color: rgb(66, 200, 209);
}

.trydress {
  background-color: #ff9423;
}

.buy {
  font-size: 30rpx;
  background-color: rgb(66, 200, 209);
}

.inner.del {
  background-color: #e64340;
  width: 180rpx;
  text-align: center;
  z-index: 4;
  color: #fff;
  position: absolute;
  top: 0;
  right: -180rpx;
}

.type-title {
  padding: 25rpx 0 15rpx 16px;
  font-size: 34rpx;
}

.products-box {
  height: 83%;
}

.disable-choose {
  background: #f5f5f5;
}

.no-data-box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #bbb;
  font-size: 30rpx;
}

.no-data-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}