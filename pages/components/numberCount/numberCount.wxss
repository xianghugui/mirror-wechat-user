/* 数量加减控件 */

/*主容器*/

.stepper {
  width: 80px;
  height: 26px;
  /*给主容器设一个边框*/
  border: 1px solid #ccc;
  border-radius: 3px;
  margin: 0 auto;
}

/*加号和减号*/

.stepper text {
  width: 26px;
  line-height: 26px;
  text-align: center;
  float: left;
  color: rgb(60, 60, 60);
}

/*数值*/

.stepper-input {
  width: 26px;
  height: 26px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  color: rgb(60, 60, 60);
}

.left-text {
  border-right: 1rpx solid #ccc;
}

.right-text {
  border-left: 1rpx solid #ccc;
}

/*普通样式*/

.normal {
  color: black;
}

/*禁用样式*/

.disabled {
  color: #ccc;
}
