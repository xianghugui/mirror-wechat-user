/* pages/fittingShow/fittingShowInfo/index.wxss */

page {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgb(0, 0, 0);
}

.brank {
  width: 88rpx;
  height: 88rpx;
  margin: 20rpx;
  border-radius: 50%;
  font-size: 50rpx;
  line-height: 88rpx;
  text-align: center;
  white-space: normal;
  background-color: rgba(0, 0, 0, 0);
  font-weight: bolder;
}

.icon-content {
  width: 110rpx;
  position: absolute;
  top: 35%;
  right: 10rpx;
  text-align: center;
}

.icon {
  width: 110rpx;
  margin-bottom: 40rpx;
  background: none;
  color: rgb(255, 255, 255);
  font-size: 25rpx;
  padding: 0;
  display: block;
}

.check-icon {
  font-size: 65rpx;
  width: 70rpx;
  height: 70rpx;
  margin: auto;
  position: relative;
  padding-bottom: 10rpx;
}

.check-share {
  background: rgba(255, 255, 255, 0);
  padding-left: 0rpx;
  padding-right: 0rpx;
}

.check-icon image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.info {
  color: rgb(255, 255, 255);
  position: absolute;
  bottom: 0rpx;
  left: 10rpx;
}

.f-user-info {
  width: 100%;
  height: 55rpx;
  padding-bottom: 20rpx;
}

.f-user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  position: absolute;
  top: 0rpx;
  left: 20rpx;
  border: 1rpx solid rgba(180, 174, 174, 0);
}

.f-user-avatar image {
  border-radius: 50%;
  width: 100%;
  height: 100%;
}

.f-user-inner {
  width: calc(100% - 80rpx);
  height: 55rpx;
  line-height: 55rpx;
  font-size: 33rpx;
  position: absolute;
  top: 0rpx;
  left: 70rpx;
}

.f-user-name, .f-user-like {
  font-weight: bold;
}

.f-user-name {
  margin-left: 30rpx;
}

.goods-content {
  /* height: 110rpx; */
  width: 100%;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 0rpx 20rpx 20rpx 20rpx;
}

.goods-content:before {
  content: "";
  display: table;
}

.goods-title {
  width: 400rpx;
  line-height: 34rpx;
  white-space: pre-wrap; 
  word-wrap:break-word;
  overflow: visible;
  box-sizing: border-box;
  font-size: 30rpx;
}

.f-shop-info {
  display: inline-block;
  width: 100%;
  position: relative;
  padding-top: 10rpx;
}

.f-shop-info:after {
  content: "";
  display: table;
}

.shop-name {
  width: 200rpx;
  font-size: 25rpx;
  margin-left: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-top: 10rpx;
}

.shop-distance {
  position: absolute;
  left: 250rpx;
  top: 0rpx;
}

.fa {
  margin-right: 5rpx;
}

.shop-icon {
  width: 30rpx;
  height: 30rpx;
}

.shop-icon image {
  width: 100%;
  height: 100%;
}

/* 底部操作弹出框 */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  height: 250rpx;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: rgba(0, 0, 0, 0.7);
  /* opacity: 0.8; */
  box-sizing: border-box;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
}

.isLike {
  color: #ff9205;
}

.shop-name {
  box-sizing: border-box;
  text-align: left;
  position: absolute;
  left: 40rpx;
  top: 0rpx;
}

.swiper-content {
  height: 150rpx;
  padding: 60rpx 0rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  text-align: center;
}

.swiper-tab {
  flex: 1;
  height: 140rpx;
  font-size: 25rpx;
  padding: 0;
  background: none;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.swiper-tab cover-image {
  width: 90rpx;
  height: 90rpx;
}

.swiper-text {
  color: #fff;
}

.cancel {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 84rpx;
  background: #191919;
  color: #6a6a6a;
  font-size: 35rpx;
  text-align: center;
  line-height: 84rpx;
  border-radius: 0rpx;
}

.video-box {
  width: 100%;
  height: 100%;
}

.video-swiper {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  transition-duration: 800ms;
  transition-timing-function: linear;
}

.global-cart {
  border-radius: 0;
  position: absolute;
  left: calc(100% - 120rpx);
  top: calc(100% - 140rpx);
}

.cover-image {
  width: 100rpx;
  height: 100rpx;
}

.video {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}

.videoended {
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  right: 14.5px;
  border-radius: 50%;
}

.videoended {
  left: 10px;
  top: 10px;
  color: white;
  text-align: center;
  line-height: 88rpx;
  background-color: rgba(0, 0, 0, 0.6);
}

.canvas {
  display: block !important;
  width: 100%;
  height: 100%;
}

/* 上下滑动动画 */
.video-image{
  transform: rotate(90deg);
  position: absolute;
  top: 145rpx;
  left: -290rpx;
}
