/* pages/figureInfo/index.wxss */

.figureInfo-content {
  font-size: 34rpx;
}

.form-item {
  display: flex;
  height: 49rpx;
  justify-content: space-between;
  padding: 32rpx 14.5px;
  border-bottom: 1px solid #e6e5e5;
  /* position: relative; */
}

.picker {
  padding-right: 20px;
}

.navigator-arrow {
  padding-right: 26rpx;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 14.5px;
}

.application {
  padding-left: 14.5px;
  padding-right: 14.5px;
  background-color: #fff;
  padding-bottom: 40rpx;
}

.application-title {
  padding-top: 40rpx;
  padding-bottom: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.clear {
  clear: both;
}

/* .application-box {
  display: table;
  width: 100%;
} */

.application-label {
  display: flex;
  float: left;
  line-height: 40rpx;
  box-sizing: content-box;
  margin-top: 30rpx;
  margin-left: 10rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #f5f6f7;
  font-size: 25rpx;
  background-color: #f5f6f7;
}

.borderShow {
  border: 1px solid #9bd9da;
  color: #40bec2;
}

.btn-area {
  padding: 40rpx 14.5px;
}

button {
  border-radius: 80rpx;
}

.swiper-box image {
  width: 100%;
  height: 100%;
}

.input-text {
  display: inline-block;
  width: 70rpx;
  height: 49rpx;
  line-height: 49rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}

.input-css {
  /* width: 85%; */
  text-align: center;
  font-size: 30rpx;
}

.sex-label {
  padding-left: 35rpx;
  padding-right: 35rpx;
}
