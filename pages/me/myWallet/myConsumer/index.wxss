/* pages/myConsumer/index.wxss */
page{
  background-color: #F1F1F1
}
/* 分润标签 */
.tabs-box{
  display:flex;
  justify-content: space-around;
  background-color: #fff;
  margin-bottom:20rpx;
}
.tabs-item{
  min-width:140rpx;
  font-size:32rpx;
  height:85rpx;
  line-height:85rpx;
  text-align:center;
  color:#2E2E2E;
  position:relative;
}
.active-class{
  color:#51C5C7;
}
.active-class:before{
  content:"";
  width:100%;
  height:5rpx;
  position:absolute;
  left:0;
  bottom:0;
  background-color: #51C5C7;
}
/* 订单消费内容 */
.order-consumer,.try-consumer{
  width:100%;
  height:calc(100% - 105rpx);
}
.order-item,.try-item{
  width:100%;
  height:172rpx;
  padding:26rpx 14.5px;
  background-color: #fff;
  border-bottom:1px solid #E3E3E3;
  box-sizing:border-box;
  position:relative;
}
.order-name,.try-name{
  height:40rpx;
  line-height:40rpx;
  font-size:34rpx;
}
.product-title{
  width:60%;
  height:40rpx;
  line-height:40rpx;
  font-size:32rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-top:5rpx;
  margin-bottom:5rpx;
}
.order-date,.try-date{
  height:30rpx;
  line-height:30rpx;
  font-size:30rpx;
  color:#9E9E9E;
}
.consumer-num,.try-num{
  position:absolute;
  right:14.5px;
  top:26rpx;
  font-size:44rpx;
  color:#FFA201;
}
::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}