/* pages/me/setting/figureInfo/index.wxss */
.inputLint{
  height: 100rpx;
  width: 750rpx;
  padding: 0 14.5px;
  line-height: 100rpx;
  border-bottom: 1px solid #f3f3f3;
  box-sizing:border-box;
  position:relative;
}
.inputTitle{
  width: 150rpx;
  overflow: hidden;
  float: left;
}
.oneLint{
  width: 450rpx;
  height: 100rpx;
  text-align: right;
  float: left;
  color: darkgrey;
}
.fa-chevron-right{
  width: 50rpx;
  height: 100rpx;
  float: left;
  margin-left: 30rpx;
  line-height: 100rpx;
  color: darkgrey;
}
.btn-area{
  width: 500rpx;
  height:80rpx;
  margin-left:calc(50% - 250rpx);
  border-radius: 80rpx;
  margin-top: 60rpx;
  overflow:hidden;
}
button{
  width: 500rpx;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  color: white;
  font-size:30rpx;
  background-color: #4BC2CA;
  transform:scale(1.2);
}
.unit{
  width: 50rpx;
  float: left;
  color: darkgrey;
}
.info{
  width: 750rpx;
  height: 390rpx;
  padding: 0 20rpx;
}
.photos{
  width: 750rpx;
  min-height: 200rpx;
  padding: 40rpx 14.5px;
  border-bottom: 1px solid #f3f3f3;
  box-sizing:border-box;
  display:flex;
  justify-content: space-around;
}
.photo,.imagebox{
  width: 300rpx;
  height: 200rpx;
  /* margin-right: 10rpx;
  float: left; */
}
.fa-id-card-o{
  font-size: 150rpx;
  text-align: center;
  line-height: 200rpx;
  color: darkgray;
  border: 3px dashed darkgrey;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.fa-times-circle{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 50rpx;
  border-radius: 25rpx;
  color: red;
  float: right;
  margin-top: -200rpx;
}