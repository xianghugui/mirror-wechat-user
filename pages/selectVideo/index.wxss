/* pages/selectVideo/index.wxss */
.select-content{
  padding-left:15px;
  padding-right:15px;
}
.select-title{
  color:#454545;
  padding:14px 0px;
}
.select-scroll{
  width:100%;
  height:616rpx;
  margin-bottom:36rpx;
}
.select-box{
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  
  margin-bottom:16rpx;
}
.select-item{
  width: 220rpx;
  /* min-width:31%; */
  height:280rpx;
  border-radius:20rpx;
  overflow: hidden;
  margin-bottom:20rpx;
  position:relative;
}
.mrlr{
  margin-left:3.5%;
  margin-right:3.5%;
}
.select-img{
  position: absolute;
  top: 30rpx;
  left: -30rpx;
  width:280rpx;
  height:220rpx;
  /* transform:rotate(90deg); */
}
.text-box{
  position:absolute;
  width:100%;
  bottom:0px;
  background-color: #000;
  opacity:0.7;
  color:#fff;
  padding-left:5px;
  overflow:hidden;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  box-sizing:border-box;
}
.text-title{
  font-size:28rpx;
  width:100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top:3px;
  margin-bottom:3px;
}
.text-address{
  font-size:24rpx;
  width:100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom:3px;
}
.text-time{
  font-size:24rpx;
  width:100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom:3px;
}
.play-box{
  width:30px;
  height:30px;
  position:absolute;
  left:50%;
  top:40px;
  margin-left:-15px;
}
.play-icon{
  width:100%;
  height:100%;
}
.check-box{
  width:25px;
  height:25px;
  position:absolute;
  right:5px;
  top:10px;
}
.check-icon{
  width:100%;
  height:100%;
}
.btn-area{
  margin-top:40px;
  overflow:hidden;
  border-radius:40rpx;
  height:80rpx;
}
button{
  transform:scale(1.2);
  height:80rpx;
  line-height:80rpx;
  text-align:center;
}