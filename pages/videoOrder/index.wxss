/* pages/videoOrder/index.wxss */
@import "../template/index.wxss";

page {
  background-color: #f3f3f3;
  width: 100%;
  min-height: 100%;
  position: relative; 
  color: rgb(50, 50, 50);
}

scroll-view {
 position: absolute;
 top: 85rpx;
 left: 0; 
 right: 0;
 bottom: 0;
 padding-top: 15rpx;
}

/* 标签 */
.tabs-box {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  /* margin-bottom:15rpx; */
}

.tabs-item {
  min-width: 140rpx;
  font-size: 28rpx;
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  position: relative;
}

.active-class {
  color: #51c5c7;
}

.active-class:before {
  content: "";
  width: 80%;
  height: 6rpx;
  position: absolute;
  left: 10%;
  bottom: 0;
  background-color: #51c5c7;
}

.orderInfo {
  width: 750rpx;
  overflow: hidden;
}
.order-item{
  background-color: #fff;
  margin-bottom:15rpx;
}
.infoTop, .infoBottom {
  width: 750rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.infoTop{
  font-size:30rpx;
}
.left {
  margin-left: 30rpx;
}

.right {
  float: right;
  margin-right: 30rpx;
}

.infoMid {
  height: 200rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  border-top: 1px solid #f3f3f3;
  border-bottom: 1px solid #f3f3f3;
  font-size:30rpx;
}
.videoImage-box{
  width: 120rpx;
  height: 180rpx;
  margin: 10rpx 40rpx;
  float:left;
  border-radius:6rpx;
  overflow:hidden;
  position:relative;
}
.videoImage {
  position: absolute;
  top: 30rpx;
  left: -30rpx;
  height: 120rpx;
  width: 180rpx;
  transform:rotate(90deg);
}

.info{
  height: 200rpx;
  width: 500rpx;
  float:left;
  position:relative;
}

.price {
  width: 500rpx;
  height: 70rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.reason {
  width: 500rpx;
  height: 70rpx;
  font-size: 36rpx;
  line-height: 70rpx;
}

.size {
  color: rgb(175, 175, 175);
  font-size: 26rpx;
  width: 500rpx;
  height: 60rpx;
}

.textOrange {
  color: rgb(255, 162, 0);
}

.action-area{
  height:60rpx;
  margin:10rpx 0;
  width:60%;
  float:right;
}

.action-item {
  height: 60rpx;
  border-radius: 30rpx;
  background-color: white;
  line-height: 57rpx;
  padding-left:20rpx;
  padding-right:20rpx;
  text-align: center;
  font-size:26rpx;
  float: right;
  margin-right: 20rpx;
  overflow:hidden;
  box-sizing: border-box;  
}

.btncolor{
  background-color:rgb(74, 196, 203);
  color: white; 
  border-style: none;
}

.refresh{
  position: fixed;
  bottom: 30rpx;
  left: calc(50% - 30rpx);
  width: 60rpx;
  height: 60rpx;
  color: #3fc0c5;
  font-size: 60rpx;
  animation: refresh 1.5s linear 0s infinite
}

.no-data-box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #bbbbbb;
  font-size: 30rpx;
}

.no-data-image{
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

@keyframes refresh{
  from{
    transform: rotate(0)
  }
  to{
    transform: rotate(360deg)
  }
}