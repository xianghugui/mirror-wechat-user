/**app.wxss**/
@import 'static/fontAwesome.wxss';

page {
  font-family: "Hiragino Sans GB", "Microsoft YaHei", "SimSun", "SimHei";
}

.page {
  position: fixed;
  width: 100%;
  height: 100%;
  font-family: "Hiragino Sans GB", "Microsoft YaHei", "SimSun", "SimHei";
  color: #2e2e2e;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.global-cart {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 645rpx;
  top: calc(100% - 140rpx);
  color: #43b0b7;
  line-height: 55rpx;
  text-align: center;
  /* background-color: rgba(0,0,0,0.5); */
  font-size: 40px;
  border-radius: 50%;
  z-index: 10000;
}

.global-cart image {
  width: 100%;
  height: 100%;
}

.globalcart-num {
  width: 26rpx;
  height: 26rpx;
  line-height: 26rpx;
  text-align: center;
  font-size: 22rpx;
  position: absolute;
  top: -5rpx;
  right: 10rpx;
  background: red;
  color: white;
  border-radius: 50%;
}

.navigator-arrow {
  padding-right: 26rpx;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

/* 播放按钮 */

.play {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 40rpx;
  position: absolute;
  top: calc(50% - 20rpx);
  left: calc(50% - 20rpx);
  color: #49c4cc;
  border-radius: 50%;
  background-color: rgba(153, 153, 155, 0.7);
}

.play:before {
  content: '';
  position: absolute;
  left: 4rpx;
  border-top: 20rpx solid transparent;
  border-left: 40rpx solid #49c4cc;
  border-bottom: 20rpx solid transparent;
  border-radius: 4rpx;
  transform: scale(0.5);
}

button::after {
  border: none;
}
